@inherits LayoutComponentBase
@inject ILogger<MainLayout> Logger
@inject PeriodicExecutor _PeriodicExecutor
@using Restaurant.Template.Utility
@implements IDisposable
@*
<MudThemeManager Open="_themeManagerOpen" 
                 OpenChanged="OpenThemeManager" 
                 Theme="_themeManager"
                 IsDarkMode="_isDarkMode"
                 ThemeChanged="UpdateTheme" />  *@


<MudThemeProvider  Theme="@_theme" IsDarkMode="_isDarkMode" />
@* 
<MudThemeManagerButton OnClick="@((e) => OpenThemeManager(true))" />
<MudDrawer @ref="MudThemeDrawer" 
           @bind-Open="_drawerOpen" 
           ClipMode="_themeManager.DrawerClipMode" 
           Elevation="_themeManager.DrawerElevation"/>
<MudThemeProvider Theme="_themeManager.Theme" IsDarkMode="_isDarkMode" />
 *@


<MudPopoverProvider />
<MudSnackbarProvider />

<MudDialogProvider FullWidth="false" 
                   MaxWidth="MaxWidth.Large" 
                   CloseButton="true" 
                   CloseOnEscapeKey="true" 
                   Position="DialogPosition.Center" />

<MudLayout>
    <MudAppBar Elevation="_themeManager.AppBarElevation">
        
        <MudIconButton
            Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())">
            <MudImage Src="img/logo/nest-2.png" Height="32" Width="32" />
        </MudIconButton>
        <MudStack Row="false" Spacing="0">
            <MudText Typo="Typo.h5" Class="ml-3">The Egg Box</MudText>
            <MudText Typo="Typo.subtitle2" Class="ml-3">&nbsp; version 0.0.9</MudText>
        </MudStack>

        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.TwoTone.ColorLens" Color="Color.Inherit"
                       OnClick="@((e) => OpenThemeManager(true))"/>
        <MudIconButton Icon="@Icons.Material.Filled.QuestionMark" Color="Color.Inherit"
                       OnClick="@((e) => OpenAboutDialog())" />
        <MudIconButton Icon="@(DarkLightModeButtonIcon)" Color="Color.Inherit" OnClick="@DarkModeToggle"/>
        <MudIconButton Icon="@Icons.Material.Filled.Sync" Color="@SyncIconColor" 
                       Edge="Edge.End"/>
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" 
                       Edge="Edge.End"/>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="mt-16 pa-4">
        @Body
    </MudMainContent>

</MudLayout>
