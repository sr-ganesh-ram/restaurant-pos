@inject ILogger<AboutDialog> Logger
<!-- Ref: https://www.w3schools.com/charsets/ref_utf_basic_latin.asp  -->

<MudDialog Class="ma-4" Style="display: block; overflow: auto;">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Color="Color.Default"
                     Size="Size.Large"
                     Icon="@Icons.Material.Filled.QuestionMark"
                     Class="mr-3 mb-n1" />
            About 
        </MudText>
    </TitleContent>
    <DialogContent>

        <MudExpansionPanels>
            <MudExpansionPanel Text="Version 0.0.9" Expanded="true">
                <MudPaper Outlined="true" Class="pa-1">
                    <MudText Color="Color.Primary" Typo="Typo.h6">What's New?</MudText>
                    <MudText Typo="Typo.body2">
                        <ul>
                            <li>
                                <span style='font-size:25px;'>&#45;</span>
                                Food Ingredients - Add
                            </li>
                            <li>
                                <span style='font-size:25px;'>&#45;</span>
                                Food Ingredients - View
                            </li>
                            <li>
                                <span style='font-size:25px;'>&#45;</span>
                                LiteDb Wasm Integration for local store
                            </li>
                        </ul>
                    </MudText>

                    <MudText Color="Color.Error" Typo="Typo.h6">Issues Fixed</MudText>
                    <MudText Typo="Typo.body2">
                        <ul>
                            <li>None</li>
                        </ul>
                    </MudText>
                </MudPaper>
                
            </MudExpansionPanel>
            <MudExpansionPanel Text="Version 0.0.8">
                <MudPaper Outlined="true" Class="pa-1">
                    <MudText Color="Color.Primary" Typo="Typo.h6">What's New?</MudText>
                    <MudText Typo="Typo.body2">
                        <ul>
                            <li>
                                <span style='font-size:25px;'>&#45;</span>
                                Settings
                            </li>
                            <li>
                                <span style='font-size:25px;'>&#45;</span>
                                Food Ingredients - Add
                            </li>
                        </ul>
                    </MudText>

                    <MudText Color="Color.Error" Typo="Typo.h6">Issues Fixed</MudText>
                    <MudText Typo="Typo.body2">
                        <ul>
                            <li>None</li>
                        </ul>
                    </MudText>
                </MudPaper>
            </MudExpansionPanel>
        </MudExpansionPanels>
        
        
    </DialogContent>
    <DialogActions>        
        <MudButton Color="Color.Primary" OnClick="Submit">Close</MudButton>
    </DialogActions>
</MudDialog>

@code{
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }
    private void Submit() => MudDialog.Close(DialogResult.Ok(true));

}